@model FinalProject.Domain.Model.Order
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
       <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

    </dl>
</div>
<table class="table">
    <tr>
        <th>
            # Product ID
        </th>
        <th>
            Quantity
        </th>
        <th>
            UnitPrice
        </th>
        <th>
            Amt.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("View", "Details", "Product", new { id = item.ProductId }, null)
            </td>

        </tr>
    }
    <tr>
        <td colspan="4" style="text-align:right">
            <h3>Total: @String.Format("₹. {0:N2}",@ViewBag.Total)</h3>
            @Html.ActionLink("...Check Out...", "Checkout", "Order", null, new { @class = "btn btn-primary" })
        </td>
    </tr>
</table>

<p>
    @Html.ActionLink("Back to Cart", "Index","ShoppingCart")
</p>
